{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "es2016.array.include",
      "es2017",
      "es2017.string",
      "es2017.object",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}